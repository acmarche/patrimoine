{% extends '@Patrimoine/layout.html.twig' %}

{% block body -%}
    <div class="card bg-light mb-3">
        <div class="card-header">
            <h3>{{ patrimoine }}</h3>
        </div>
        <div class="card-body">

            {% include '@Patrimoine/patrimoine/_actions.html.twig' %}
            <p>
                {{ patrimoine.rue }}
                {{ patrimoine.numero }}<br/>
                {{ patrimoine.codePostal }}
                {{ patrimoine.localite }}
            </p>
            <table class='table table-bordered table-hover'>
                <tbody>
                {% if patrimoine.photo %}
                    <tr>
                        <th>Ancienne photo</th>
                        <td>
                            <a href="{{ patrimoine.photo }}" target="_blank">
                                <img class="img-thumbnail"
                                     src="{{ patrimoine.photo }}" style="width: 150px;"
                                     alt="img"/>
                            </a>
                        </td>
                    </tr>
                {% endif %}
                <tr>
                    <th>Statut</th>
                    <td>{{ patrimoine.statut }}</td>
                </tr>
                <tr>
                    <th>Type</th>
                    <td>{{ patrimoine.typePatrimoine }}</td>
                </tr>
                <tr>
                    <th>Statut</th>
                    <td>{{ patrimoine.statut }}</td>
                </tr>
                <tr>
                    <th>Latitude</th>
                    <td>{{ patrimoine.latitude }}</td>
                </tr>
                <tr>
                    <th>Longitude</th>
                    <td>{{ patrimoine.longitude }}</td>
                </tr>
                </tbody>
            </table>

            {% include '@Patrimoine/patrimoine/_images.html.twig' %}
            {% include '@Patrimoine/patrimoine/_carte.html.twig' %}

        </div>
    </div>
{% endblock %}
